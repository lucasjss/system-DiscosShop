<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #31081f;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sonodisco.AcervoController">
    <Button fx:id="btnRegistrar" layoutX="14.0" layoutY="334.0" mnemonicParsing="false" onAction="#acessarRegistrar"
            prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: fdfffc;" text="Registrar">
        <font>
            <Font name="Comic Sans MS" size="25.0"/>
        </font>
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
    <TableView fx:id="discosTable" layoutX="10.0" layoutY="14.0" prefHeight="300.0" prefWidth="580.0">
        <columns>
            <TableColumn fx:id="nomeCol" prefWidth="237.0" text="nome"/>
            <TableColumn fx:id="autoriaCol" prefWidth="164.0" text="autoria"/>
            <TableColumn fx:id="generoCol" prefWidth="104.0" text="gênero"/>
            <TableColumn fx:id="lancamentoCol" minWidth="8.0" prefWidth="74.0" text="lançamento"/>
        </columns>
    </TableView>
    <Button fx:id="btnGrafico" layoutX="440.0" layoutY="334.0" mnemonicParsing="false" onAction="#acessarGrafico"
            prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: fdfffc;" text="\% gênero">
        <font>
            <Font name="Comic Sans MS" size="25.0"/>
        </font>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
    <Button fx:id="btnDelete" layoutX="195.0" layoutY="334.0" mnemonicParsing="false" onAction="#delete"
            prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: fdfffc;" text="Deletar">
        <font>
            <Font name="Comic Sans MS" size="25.0"/>
        </font>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
</AnchorPane>
